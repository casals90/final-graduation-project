<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
      
    <EditText
        android:id="@+id/album_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/album_title"
        android:maxLength="25"
        android:layout_marginBottom="10dp"/>
    
    <LinearLayout 
        android:id="@+id/add_new_user"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/album_name">
        
        <TextView
            android:id="@+id/members_of_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/members_of_album"
            android:textSize="15sp"
            android:layout_marginRight="20dp"/>
        
	    <ImageButton 
	        android:id="@+id/add_members"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:src="@drawable/ic_action_add_person"
	        android:contentDescription="@string/explain"/> 
        

	</LinearLayout>
    
    <ListView
        android:id="@+id/list_members"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/add_new_user"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_new_user"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
    
</RelativeLayout>
