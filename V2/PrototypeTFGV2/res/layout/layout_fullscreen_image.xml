<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context="com.example.prototypetfgv2.view.ShowPhotoActivity" >

    <ImageView
        android:id="@+id/imgDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/explain"/>
    
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    
    <LinearLayout 
         android:id="@+id/buttons"
         android:orientation="horizontal"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_alignBottom="@+id/imgDisplay"
         android:layout_marginBottom="10dp"
         android:layout_alignParentRight="true">
         
         <Button
	        android:id="@+id/like"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:textColor="@color/White"
	        android:drawableLeft="@drawable/ic_action_good"
	        android:background="@drawable/bg_button"
	        android:focusable="false"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="10dp"
	        android:gravity="center_vertical"
	        android:drawablePadding="5dp"
	        android:layout_marginBottom="5dp"
			android:focusableInTouchMode="false"
	        android:text="@string/zero"/>
    
	    <Button
	        android:id="@+id/comment"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:textColor="@color/White"
	        android:background="@drawable/bg_button"
	        android:drawableLeft="@drawable/ic_action_comment"
	        android:layout_marginRight="10dp"
	        android:focusable="false"
	        android:gravity="center_vertical"
	        android:drawablePadding="5dp"
			android:focusableInTouchMode="false"
			android:layout_marginBottom="5dp"
	        android:text="@string/zero"/>  
     </LinearLayout>
</RelativeLayout>